{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{ range where .Site.RegularPages "Type" "not in" (slice "archive") }}
    {{ $page := . }}
    <url>
        <loc>{{ .Permalink }}</loc>
        {{ if ne (.Date.Format "2006-01-02T15:04:05-07:00") "0001-01-01T00:00:00+00:00" }}<lastmod>{{ safeHTML (.Date.Format "2006-01-02T15:04:05-07:00") }}</lastmod>{{ end }}
    </url>
    {{ range .AlternativeOutputFormats }}
      <url>
        <loc>{{ .Permalink }}</loc>
        {{ if ne ($page.Date.Format "2006-01-02T15:04:05-07:00") "0001-01-01T00:00:00+00:00" }}<lastmod>{{ safeHTML ($page.Date.Format "2006-01-02T15:04:05-07:00") }}</lastmod>{{ end }}
      </url>
    {{ end }}
  {{ end }}
</urlset>
